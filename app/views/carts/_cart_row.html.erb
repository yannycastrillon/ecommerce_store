<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
    </div>
    <div class="col-xs-4">
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
      <div class="row">
        <div class="col-xs-4">
          <%= label_tag :quantity, "Units:" %>
          <%= number_field :quantity, order_item.quantity, name:"cart[order_item.quantity]",
              value: order_item.quantity.to_i, disable:true, readonly:true,
              class: "form-control", min: 1
          %>
          <%= hidden_field :product_id, order_item.product_id, value: product.id %>
        </div>
        <div class="col-xs-8 text-right">
          <div class="btn-group">
            <%= link_to "Delete", remove_from_cart_path(order_item.cart_list_id.to_i), { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
          </div>
        </div>
      </div>
      <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></h4>
    </div>
  </div>
</div>
