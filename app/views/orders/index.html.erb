<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Bill firstname</th>
      <th>Bill lastname</th>
      <th>Bill address1</th>
      <th>Bill address2</th>
      <th>Bill city</th>
      <th>Bill state</th>
      <th>Bill zipcode</th>
      <th>Phone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.email %></td>
        <td><%= order.bill_firstname %></td>
        <td><%= order.bill_lastname %></td>
        <td><%= order.bill_address1 %></td>
        <td><%= order.bill_address2 %></td>
        <td><%= order.bill_city %></td>
        <td><%= order.bill_state %></td>
        <td><%= order.bill_zipcode %></td>
        <td><%= order.phone %></td>
        <td><%= order.user %></td>
        <td><%= link_to 'Show', user_order_path(current_user,order) %></td>
        <td><%= link_to 'Edit', edit_user_order_path(current_user,order) %></td>
        <td><%= link_to 'Destroy', user_order_path(current_user,order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

